@inject IHttpContextAccessor _httpContextAccessor
@{
	string? userName = _httpContextAccessor.HttpContext.Session.GetString("UserName");
	string? ProfileImage = _httpContextAccessor.HttpContext.Session.GetString("ProfileImage");
	if (string.IsNullOrEmpty(ProfileImage))
	{
		ProfileImage = "noProfile.png";
	}
}

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
	<!-- Brand Logo -->
	<a asp-action="Index" asp-controller="User" class="brand-link">
	  <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
	  <span class="brand-text font-weight-light">CRUD App</span>
	</a>
	
	<!-- Sidebar -->
	<div class="sidebar">
	  <!-- Sidebar user panel (optional) -->
	  <div class="user-panel mt-3 pb-3 mb-3 d-flex">
		<div class="image">
		  <img src="@(ProfileImage)" class="img-circle elevation-2" alt="User Image">
		</div>
		<div class="info">
		  <a href="#" class="d-block">@userName</a>
		</div>
	  </div>
	
	  <!-- Sidebar Menu -->
	  <nav class="mt-2">
		<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
		  <!-- Add icons to the links using the .nav-icon class
			   with font-awesome or any other icon font library -->
		  <li class="nav-item">
	           <a asp-action="Index" asp-controller="User" class="nav-link active">
	             <i class="nav-icon fas fa-tachometer-alt"></i>
	             <p>
	               Dashboard
	             </p>
	           </a>
	         </li>
		  <li class="nav-item">
			<a asp-action="CreateOrEdit" asp-controller="User" class="nav-link">
			  <i class="nav-icon far fa-plus-square"></i>
			  <p>
				Create User
				<span class="right badge badge-danger">New</span>
			  </p>
			</a>
		  </li>
		</ul>
	  </nav>
	  <!-- /.sidebar-menu -->
	</div>
	<!-- /.sidebar -->
</aside>
	