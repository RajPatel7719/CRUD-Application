@inject IHttpContextAccessor _httpContextAccessor
@{
	string? userName = _httpContextAccessor.HttpContext.Session.GetString("UserName");
}
}

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light" style="margin-top: -25px;">
	<!-- Left navbar links -->
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a asp-action="Index" asp-controller="User" class="nav-link">Home</a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="#" class="nav-link">Contact</a>
		</li>
		@*<li class="nav-item d-none d-sm-inline-block">
		<a asp-action="CreateOrEdit" asp-controller="User" class="nav-link">Create</a>
		</li>*@
	</ul>

	<!-- Right navbar links -->
	<ul class="navbar-nav ml-auto">
		<!-- Notifications Dropdown Menu -->
		<li class="nav-item dropdown">
			<a class="nav-link" data-toggle="dropdown" href="#">
				<i class="far fa-bell"></i>
				<span class="position-absolute top-0 start-100 translate-middle p-1 bg-success border rounded-circle"></span>
			</a>
			<div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
				<span class="dropdown-item dropdown-header"></span>
				<div class="dropdown-divider"></div>
				<a href="#" class="dropdown-item">
					<i class="fas fa-user mr-2"></i>
					<span class="float-right text-muted text-sm">@userName</span>
				</a>
				<div class="dropdown-divider"></div>
				<a asp-action="EditProfile" asp-controller="Profile" asp-route-email="@userName" class="dropdown-item">
					<i class="fas fa-pen-square mr-2"></i>
					<span class="float-right text-muted text-sm">Edit Profile</span>
				</a>
				<div class="dropdown-divider"></div>
				<span id="spanTimeLeft"></span>
				<div class="dropdown-divider"></div>
				<a asp-action="Logout" asp-controller="Account" class="dropdown-item">
					<i class="fas fa-sign-out-alt mr-2"></i>
					<span class="float-right text-muted text-sm">Logout</span>
				</a>
				@*<a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>*@
			</div>
		</li>
	</ul>
