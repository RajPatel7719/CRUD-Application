@model IEnumerable<CRUD_Application.Models.Register>
@{
    ViewData["Title"] = "Index";
}

<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Index</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Users</h3>
          <div class="card-tools">
              @using (Html.BeginForm())
              {
                  <p>Find by First Name: @Html.TextBox("SearchString")<input type="submit" value="Search" /></p>
              } 
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 20%">
                          <label>UserName</label>
                      </th>
                      <th style="width: 20%">
                          <label>Email</label>
                      </th>
                      <th style="width: 20%">
                          <label>Status</label>
                      </th>
                  </tr>
              </thead>
              <tbody>
                  @foreach (var user in Model)
                { 
                    <tr>
                      <td>
                          @Html.DisplayFor(model => user.UserName)
                      </td>
                      <td>
                              @Html.DisplayFor(model => user.Email)
                      </td>
                      <td>
                              @Html.DisplayFor(model => user.TwoFactorEnabled)
                      </td>
                      <td class="project-actions text-right">
                          <a class="btn btn-info btn-sm" asp-route-id="@user.Email" asp-action="EditProfile"><i class="fas fa-pencil-alt"></i>Edit</a>
                          <!--<a class="btn btn-danger btn-sm" onclick="return confirm('Are You Sure You Want To Delete These User?');" asp-route-id="@user.Email" asp-action="Delete"><i class="fas fa-trash"></i>Delete</a>-->
                      </td>
                  </tr>
                  }
              </tbody>
          </table>
        </div>
        <div class="card-footer">
            <a asp-action="CreateOrEdit" class="btn btn-success float-right">Create New User</a>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
<br />  