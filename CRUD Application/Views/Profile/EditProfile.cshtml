@inject IHttpContextAccessor _httpContextAccessor
@model CRUD_Application.Models.Register
@{
    string profilePicture = _httpContextAccessor.HttpContext.Session.GetString("ProfileImage");
    if (string.IsNullOrEmpty(profilePicture))
    {
        profilePicture = "noProfile.png";
    }
}

<div class="row p-4 justify-content-center">
    <div class="register-box">
        <div class="card card-outline card-info">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>CRUD</b>APP</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Edit Profile</p>
                <form method="post" enctype="multipart/form-data">
                    <div class="media-container">
                        <span>
                            <input type="file" asp-for="ImageFile" id="media-input" accept=".png">
                            <i class="an an-write media-icon"></i>
                        </span>
                        <figure class="media-object">
                            <img class="img-object" src="@(profilePicture)">
                        </figure>
                    </div>
                    @*<div class="media-control">
                        <div class="btn edit-profile">
                            <i class="an an-write"></i>Edit Profile
                        </div>
                        <div class="btn save-profile">
                            <i class="an an-save"></i>Save Profile
                        </div>
                    </div>*@
                    <div class="input-group mb-3">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <div class="input-group mb-3">
                        <input type="email" asp-for="UserName" class="form-control" placeholder="User Name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <div class="form-group clearfix">
                        <div class="icheck-primary d-inline">
                            <input type="checkbox" asp-for="TwoFactorEnabled">
                            <label asp-for="TwoFactorEnabled"> Status </label>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
</div>
